<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/yo_bar_height"
              android:background="@color/yo_bar_color"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_bar_back"
            android:layout_width="@dimen/yo_bar_height"
            android:layout_height="@dimen/yo_bar_height"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/btn_back_white"
            android:tint="@color/yo_bar_title_color"/>

        <TextView
            android:id="@+id/tv_bat_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="选择图片"
            android:textColor="@color/yo_bar_title_color"
            android:textSize="17sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/yo_bg_divider"/>
</LinearLayout>